<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Akun">
    <ImageView
        android:id="@+id/topLogo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:background="#FFFFFF"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/topLogo"
        android:background="#868686"
        android:id="@+id/topLine"/>
    <RelativeLayout
        android:id="@+id/infoAkn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topLine">
        <TextView
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:id="@+id/upNama"
            android:textSize="20sp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/Aknnama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/upNama"
            android:paddingLeft="10dp" />
        <View
            android:id="@+id/line2"
            android:layout_below="@+id/Aknnama"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#9f9f9f"/>
        <TextView
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/upEmail"
            android:layout_below="@+id/line2"
            android:text="Email"
            android:textSize="20sp"
            android:textColor="#000000"
            />
        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/Aknemail"
            android:layout_below="@+id/upEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:id="@+id/line3"
            android:layout_below="@id/Aknemail"
            android:background="#9f9f9f"/>
        <TextView
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/upHp"
            android:text="No Handphone"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_below="@id/line3"
            />
        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/Aknhp"
            android:layout_below="@+id/upHp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:id="@+id/line4"
            android:background="#9f9f9f"
            android:layout_below="@id/Aknhp"
            />
        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/upKamar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Kamar"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_below="@+id/line4"
            />
        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/Aknkmr"
            android:layout_below="@+id/upKamar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#9f9f9f"
            android:layout_below="@+id/Aknkmr"/>
    </RelativeLayout>
    <Button
        android:id="@+id/AknHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bantuan"
        android:layout_above="@+id/actFoot"/>
    <Button
        android:id="@+id/Aknreset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ganti Kata Sandi"
        android:layout_above="@+id/AknHelp"/>

    <RelativeLayout
        android:id="@+id/actFoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4052b5"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <ImageView
            android:id="@+id/home"
            android:layout_alignParentLeft="true"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:src="@drawable/home"/>
        <TextView
            android:id="@+id/countKer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="95dp"
            android:textColor="#FFFFFF"
            android:layout_toRightOf="@+id/home"/>
        <ImageView
            android:id="@+id/keranjang"
            android:layout_toRightOf="@+id/home"
            android:layout_toLeftOf="@+id/akun"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:src="@drawable/keranjang"/>
        <ImageView
            android:id="@+id/akun"
            android:layout_alignParentRight="true"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:src="@drawable/akun"/>
    </RelativeLayout>
</RelativeLayout>