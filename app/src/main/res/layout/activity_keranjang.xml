<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Keranjang">
    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="#4052b5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:text="Nama Menu"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:text="Harga"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/lsOrder"
        android:layout_below="@+id/head"
        android:layout_above="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/btKosong"
        android:text="Total Harga :"
        android:textSize="18sp"
        android:paddingRight="80dp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/totalHrg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btKosong"
        android:paddingRight="10dp"
        android:layout_alignParentRight="true"
        android:text="X"
        android:textSize="18sp"
        android:textColor="#000000"/>
    <Button
        android:id="@+id/btKosong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btPesan"
        android:text="Kosongkan"/>
    <Button
        android:id="@+id/btPesan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Pesan"
        android:paddingBottom="10dp"/>
</RelativeLayout>